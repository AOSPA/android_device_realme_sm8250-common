allow hal_power_default vendor_proc_display:dir r_dir_perms;
allow hal_power_default vendor_proc_display:file rw_file_perms;

allow hal_power_default {
  vendor_sysfs_devfreq
  sysfs_msm_subsys
}:dir search;

allow hal_power_default {
  cgroup
  proc
  vendor_sysfs_devfreq
  sysfs_devices_system_cpu
  vendor_sysfs_graphics
  vendor_sysfs_kgsl
  sysfs_msm_subsys
  vendor_sysfs_scsi_host
}:{
  file
  lnk_file
} rw_file_perms;

allow hal_power_default vendor_latency_device:chr_file rw_file_perms;

# Rule for hal_power_default to access graphics composer process
unix_socket_connect(hal_power_default, vendor_pps, hal_graphics_composer_default);

# To get/set powerhal state property
set_prop(hal_power_default, vendor_power_prop)